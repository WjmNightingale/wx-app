/* pages/book/book.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.container .header {
  position: fixed;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 3px 0 #e3e3e3;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  z-index: 99;
  background-color: #ffffff;
}

.container .header .box {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 50px;
  background-color: #f5f5f5;
  height: 34px;
  width: 700rpx;
  color: #999999;
}

.container .header .box image {
  width: 14px;
  height: 14px;
  margin-right: 10px;
  margin-bottom: -2px;
}

.container .sub-container {
  display: flex;
  flex-direction: column;
  margin-top: 100rpx;
  align-items: center;
  background-color: #f5f5f5;
}

.container .sub-container .head-img {
  width: 106rpx;
  height: 34rpx;
  margin-top: 40rpx;
}

.container .sub-container .books-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 90rpx 0 90rpx;
  margin-top: 10rpx;
}