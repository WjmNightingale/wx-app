/* pages/book-detail/index.wxss */
.container {
  width: 100%;
  background-color: #f5f5f5;
}

.container .header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0 40rpx 0;
  background-color: #fff;
}

.header-image {
  width: 300rpx;
  height: 200rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}

.header-title {
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
  color: #2f2f2f;
}

.header-author {
  font-size: 28rpx;
  color: #999;
}

.sub-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 690rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  background-color: #fff;
}

.headline {
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
}

.shadow {
  color: #999;
}

/* 书本评论样式 */

.comment-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.comment-container v-tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}

.comment-container v-tag>.num {
  margin-left: 5px;
  font-size: 22rpx;
  color: #aaa;
}

/* 外部自定义样式传递给组件 */

.ex-tag1 {
  background-color: #fffbdb !important;
}

.ex-tag2 {
  background-color: #eefbff !important;
}

