/* 书籍详情样式 */
.headline {
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
}

.book-summary {
  text-indent: 58rpx;
  font-weight: 500;
  color: #000;
}

.book-detail-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-bottom: 100rpx;
  font-size: 28rpx;
  color: #666;
}

.vertical {
  display: flex;
  flex-direction: column;
}

.description {
  color: #999;
  margin-right: 30rpx;
}

.post-container {
  position: fixed;
  bottom: 0;
  padding: 0 30rpx;
  width: 690rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-shadow: 1px -1px 1px #e3e3e3;
  background-color: #fff;
}

.post-fake {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 460rpx;
  height: 60rpx;
  padding-left: 20rpx;
  border: 1px solid #999;
  border-radius: 15px;
  font-size: 22rpx;
}

.like-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.like {
  margin-right: 30rpx;
  margin-top: 10rpx;
}

.posting-container {
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  width: 100%;
  z-index: 999;
}

.posting-header {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
  border-top: 1px solid #f5f5f5;
}

.posting-header>text {
  padding: 25rpx;
}

.desc {
  color: #bbb;
  font-size: 28rpx;
}

.cancel {
  color: #666;
}


.posting-comment-container {
  width: 690rpx;
  padding: 40rpx 30rpx 0 30rpx;
}

.comment-input {
  width: 690rpx;
  height: 56rpx;
  margin: 30rpx auto;
  padding-left: 25rpx;
  border-radius: 15px;
  background-color: #f5f5f5;
}

