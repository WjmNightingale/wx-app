<!--pages/book-detail/index.wxml-->
<view class="container">
  <view class="header">
    <image src="{{book.image}}"></image>
    <text class="title">{{book.title}}</text>
    <text class="author">{{book.author}}</text>
  </view>
  <view class="sub-container">
    <text class="headline">短评</text>
    <view class="comment-container">
      <block wx:for="{{comments}}" wx:key="content">
        <v-tag comment="{{item.content}}" tag-class="{{index === 0 ? 'ex-tag1' : '' || index === 1 ? 'ex-tag2': ''}}">
          <text class="num" slot="num">{{'+' + item.nums}}</text>
        </v-tag>
      </block>
    </view>

  </view>
  <view class="sub-container">
    <text class="headline">内容简介</text>
    <text class="content">{{book.summary}}</text>
  </view>
</view>