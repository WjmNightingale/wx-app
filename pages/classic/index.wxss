.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 0;
}

.header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}

.header .date {
  margin-left: 20rpx;
  margin-top: 4rpx;
}

.header .like {
  margin-top: 6rpx;
}

.nav {
  position: absolute;
  bottom: 20rpx;
}