/* pages/my/my.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bg {
  width: 750rpx;
  height: 574rpx;
}

.avatar-position {
  position: absolute;
  top: 255rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.about-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: absolute;
  top: 440rpx;
  width: 550rpx;
  padding: 0 100rpx;
}

.about-us-img {
  width: 34rpx;
  height: 34rpx;
}

.about-us {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.about-us:last-child {
  align-items: baseline;
}

.book-num {
  font-size: 36rpx;
  color: #DC143C;
}

.description {
  margin-left: 6rpx;
  font-size: 24rpx;
  color: #999999;
}

.like-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: -14rpx;
  background-color: #f5f5f5;
}

.headline {
  width: 98rpx;
  height: 42rpx;
  margin-top: 30rpx;
}

.preview-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 30rpx;
  padding: 0 30rpx;
}

.preview {
  margin-bottom: 30rpx;
}