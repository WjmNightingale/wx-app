/* components/search/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.header {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  width: 750rpx;
  height: 100rpx;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  background-color: #ffffff;
  z-index: 99;
}

.search-container {
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  border-radius: 50px;
  background-color: #f5f5f5;
}

.search-img {
  width: 14px;
  height: 14px;
  margin-left: 12px;
  margin-right: 8px;
}

.bar {
  display: inline-block;
  width: 500rpx;
  height: 34px;
  border-top-right-radius: 15px;
  border-bottom-right-radius: 15px;
  font-size: 14px;
}

.cancel-img {
  width: 14px;
  height: 14px;
  margin-right: 10px;
}

.cancel {
  display: inline-block;
  width: 60px;
  text-align: center;
  line-height: 34px;
  border: none;
}

.history {
  display: flex;
  flex-direction: column;
  width: 690rpx;
  margin: 160rpx 0 20rpx 0;
  font-size: 14px;
}

.title {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  line-height: 16px;
}

.chunk {
  display: inline-block;
  width: 5px;
  height: 15px;
  margin-right: 10px;
  background-color: #000;
}

.desc {}

.tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 630rpx;
  margin-top: 24rpx;
  padding-left: 15px;
}